<div class="container">

    <div class="jumbotron">
        <h1 class="display-4">Welcome to Burger Town!</h1>
        <img src="/assets/img/burger.jpg" alt="Picture of Burger">
        <hr class="my-4">
        <p>When you've consumed your burger press the Devour button!</p>
    </div>

    <div class="row">
        <div class="col-1"></div>
        <div class="col-sm">
            <h2>Burgers ready to eat!</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-1"></div>

        <div class="col-sm">
            <h2>Devoured Burgers!</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
        <div class="col-1"></div>

    </div>

    <h2>Add a burger to the menu</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="burger">Burger Name:</label>
            <input type="text" id="burger" name="burger_name">
        </div>


        <button type="submit">Add a Burger</button>
    </form>
</div>